package CalcuBasica;

public class CalcuBasica {
	public double numero1;
    public double numero2;
 
    public static void main(String[] args) {
        CalculadoraBasica calculadora = new CalculadoraBasica();
        calculadora.numero1 = 10;
        calculadora.numero2 = 5;
 
        // Suma
        double suma = calculadora.numero1 + calculadora.numero2;
        System.out.println("La suma es: " + suma);
 
        // Resta
        double resta = calculadora.numero1 - calculadora.numero2;
        System.out.println("La resta es: " + resta);
 
        // Multiplicaci贸n
        double multiplicacion = calculadora.numero1 * calculadora.numero2;
        System.out.println("La multiplicaci贸n es: " + multiplicacion);
 
        // Divisi贸n
        if (calculadora.numero2 != 0) {
            double division = calculadora.numero1 / calculadora.numero2;
            System.out.println("La divisi贸n es: " + division);
        } else {
            System.out.println("No se puede dividir entre cero.");
        }
    }
}